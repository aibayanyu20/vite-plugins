{
  "name": "vite-plugin-vitepress-demo",
  "type": "module",
  "version": "2.2.0",
  "description": "A vite plugin for vitepress code block demo.",
  "author": "aibayanyu",
  "license": "MIT",

  "homepage": "https://github.com/aibayanyu20/vite-plugins/#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aibayanyu20/vite-plugins.git"
  },
  "keywords": [
    "vitepress",
    "markdown",
    "vite",
    "vite-plugin",
    "vitepress-code-block-demo",
    "vitepress-demo"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./theme": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/index.mjs"
    },
    "./dist/theme": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/index.mjs"
    },
    "./theme/**": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/**"
    },
    "./dist/theme/**": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/**"
    },
    "./dist/theme/**/*.vue": {
      "import": "./dist/theme/**/*.vue"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "README.md",
    "README.zh-CN.md",
    "banner.png",
    "dist",
    "theme"
  ],
  "scripts": {
    "dev": "vitepress dev playground",
    "clean": "rimraf dist theme",
    "un:build": "unbuild",
    "ts:build": "tsup",
    "build": "run-s clean ts:build un:build cp:theme",
    "docs:build": "vitepress build playground",
    "preview": "vitepress preview playground",
    "cp:theme": "cpx dist/theme/index.d.ts ./theme"
  },
  "peerDependencies": {
    "vitepress": "^1.0.0-rc.29"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "dom-serializer": "^2.0.0",
    "fast-glob": "^3.3.0",
    "fs-extra": "^11.1.1",
    "htmlparser2": "^8.0.2",
    "magic-string": "^0.30.5",
    "vue": "^3.3.8"
  },
  "devDependencies": {
    "@mistjs/tsconfig-vue": "^0.0.4",
    "@types/fs-extra": "^11.0.4",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.18.10",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitepress": "1.0.0-rc.29"
  }
}
